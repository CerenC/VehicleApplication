<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey"
        android:clickable="true"
        android:layout_marginTop="20dp">

    <TextView
            android:id="@+id/vehicleIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/vehicle_item_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/countryTextView"/>
    <TextView
            android:id="@+id/countryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/vehicle_item_padding"
            app:layout_constraintTop_toBottomOf="@id/vehicleIdTextView"
            app:layout_constraintBottom_toTopOf="@+id/colorTextView"/>
    <TextView
            android:id="@+id/colorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/vehicle_item_padding"
            app:layout_constraintTop_toBottomOf="@id/countryTextView"
            app:layout_constraintBottom_toTopOf="@+id/typeTextView"/>
    <TextView
            android:id="@+id/typeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/vehicle_item_padding"
            app:layout_constraintTop_toBottomOf="@id/colorTextView"/>

</android.support.constraint.ConstraintLayout>